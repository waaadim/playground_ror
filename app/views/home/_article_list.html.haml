.well.well-small
  .pull-right{ :'data-position' => 'bottom', :'data-intro' => 'Reset the filter settings to defaults.' }
    = link_to "Reset filters", reset_filterrific_url, :class => 'btn btn-default btn-sm'
  .info{ :'data-position' => 'bottom', :'data-intro' => "will_paginate's entries info works as expected." }
    = page_entries_info articles, :model => 'article'
  .info{ :'data-position' => 'bottom', :'data-intro' => 'Spinner indicates update.' }
    = render_filterrific_spinner

%table.table
  %tr
    %th Title
    %th Body
    %th Author
    %th Link
    %th Publish Date
  - articles.each do |article|
    %tr
      %td= article.title
      %td= article.body
      %td= article.poster.name
      %td= article.link
      %td= article.publish_date.to_date.to_s(:long)

.pagination{ :'data-position' => 'top', :'data-intro' => "will_paginate's paginator works as expected." }
  = will_paginate articles, renderer: BootstrapPagination::Rails
